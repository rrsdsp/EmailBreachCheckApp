@model EmailAddress

<h3>Mail address check</h3>
@using (Html.BeginForm("GetAddressFromApi", "Home", FormMethod.Post))
{
    <div class=form-group>

        <label asp-for="Address">Email address:</label>&nbsp;<span>@Model.Response</span>
        <div class="input-group mb-3">
            <input type="email" asp-for="Address" class="form-control" placeholder="Enter email" />
            <button type="submit" class="btn btn-primary">Search</button>
            </div>                        
    </div>
       
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" id="modalOpen">
    Add new email address
</button>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add new email address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("PostAddressToApi", "Home", FormMethod.Post))
                {
                    <div class=form-group>
                        <label asp-for="Address">Email address:</label>
                        <div class="input-group mb-3">
                            <input type="email" asp-for="Address" class="form-control" placeholder="Enter email" id="inpAddEmail"/>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>              
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>     
        $(document).ready(() => {
            $("#modalOpen").click(() => {
                $("#inpAddEmail").val("");
            });



        })
    </script>
}





